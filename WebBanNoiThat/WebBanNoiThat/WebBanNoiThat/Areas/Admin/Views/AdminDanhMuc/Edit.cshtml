@model WebBanNoiThat.Models.DanhMucSp

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Sửa Thông Tin</h1>

<h4>Danh Mục</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" style="margin-left:30px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaDm" />
             <div class="form-group">
                <label asp-for="TenDm" class="control-label">Tên danh mục</label>
                <input asp-for="TenDm" class="form-control" style="background:#fff;"/>
                <span asp-validation-for="TenDm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnhDm" class="control-label">Ảnh danh mục</label>
                <input asp-for="AnhDm" class="form-control" style="background:#fff;"/>
                <span asp-validation-for="AnhDm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTaDm" class="control-label">Mô tả</label>
                <input asp-for="MoTaDm" class="form-control" style="background:#fff;"/>
                <span asp-validation-for="MoTaDm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="TrangThai" type="checkbox"/>
                <small>Trạng Thái Hiển Thị</small>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm Mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay Lại</a>
</div>

