@model WebBanNoiThat.Models.SanPham

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Chi Tiết</h1>

<div>
    <h4>Sản Phẩm</h4>
    <hr />
    <dl class="row" style="margin-left:30px;">
        <dt class = "col-sm-2">
            Tên Sản Phẩm:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenSp)
        </dd>
        <dt class = "col-sm-2">
           Ảnh Sản Phẩm:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnhSp)
        </dd>
        <dt class = "col-sm-2">
            Video Sản Phẩm:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VideoSp)
        </dd>
        <dt class = "col-sm-2">
           Giá Sản Phẩm:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GiaSp)
        </dd>
        <dt class = "col-sm-2">
           Hiển Thị
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
        <dt class = "col-sm-2">
           Bán Chạy
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BestSeller)
        </dd>
        <dt class = "col-sm-2">
            Ngày Tạo:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class = "col-sm-2">
            Mô Tả Sản Phẩm:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MotaSp)
        </dd>
        <dt class = "col-sm-2">
           Tên Danh Mục:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaDmNavigation.TenDm)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MaSp" class="btn btn-primary">Edit</a> <br />
    <a asp-action="Index">Quay lại</a>
</div>
